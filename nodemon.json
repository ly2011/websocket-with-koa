{
  "restartable": "rs",
  "ignore": [".git", "node_modules", "bower_components", ".sass-cache"],
  "watch": ["src"],
  "colours": true,
  "verbose": false,
  "runOnChangeOnly": false,
  "stdin": true,
  "stdout": true,
  "execMap": {
    "js": "node --harmony"
  },
  "events": {
    "start": "",
    "crash": "",
    "exit": "",
    "restart": "",
    "config:update": ""
  },
  "env": {
    "NODE_ENV": "development",
    "PORT": "5002"
  },
  "ext": "js ts tsx json css html",
  "legacy-watch": false
}
